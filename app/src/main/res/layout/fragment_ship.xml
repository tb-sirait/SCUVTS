<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ShipFragment">

    <TextView
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/poppins_bold"
        android:lineSpacingExtra="8sp"
        android:text="Kapal OSES"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:typeface="normal" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:queryHint="cari nama kapal"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_background_bar"
        android:id="@+id/searchView"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listKapal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            tools:listitem="@layout/item_kapal" />
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Kecepatan"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="-1dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/mmsi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="93dp"
        android:fontFamily="@font/poppins_regular"
        android:text="MMSI"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/textView3"
        android:layout_toEndOf="@+id/mmsi_title"
        android:fontFamily="@font/poppins_regular"
        android:text="Nama Kapal"
        android:textAlignment="center"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="-1dp"
        android:background="@android:color/black" />


</RelativeLayout>